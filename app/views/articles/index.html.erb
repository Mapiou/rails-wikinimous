<h1>Articles list:</h1>
  <% @articles.each do |article| %>
    <div>
      <h2><%= link_to article.title, article_path(article) %></h2>
      <p><%= article.content %></p>
      <%= link_to "Delete", article_path(article),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>

